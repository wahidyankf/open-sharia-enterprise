{
  "permissions": {
    "allow": [
      "Read(.claude/**)",
      "Write(.claude/**)",
      "Edit(.claude/**)",
      "Read(.opencode/**)",
      "Write(.opencode/**)",
      "Edit(.opencode/**)",
      "Bash(cat > .claude:*)",
      "Bash(cat > .opencode:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(npm run sync\\:claude-to-opencode:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/format-lint-markdown.sh"
          }
        ]
      }
    ]
  }
}
