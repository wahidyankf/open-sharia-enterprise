{
  "name": "open-sharia-enterprise",
  "version": "1.0.0",
  "description": "Fintech application with monorepo architecture",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "test": "nx run-many -t test:quick",
    "lint": "nx run-many -t lint",
    "lint:md": "markdownlint-cli2 \"**/*.md\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\"",
    "format:md": "prettier --write \"**/*.md\"",
    "format:md:check": "prettier --check \"**/*.md\"",
    "affected:build": "nx affected -t build",
    "affected:test": "nx affected -t test:quick",
    "affected:lint": "nx affected -t lint",
    "graph": "nx graph",
    "nx": "nx",
    "prepare": "husky",
    "postinstall": "npm run doctor",
    "organiclever:dev": "cd infra/dev/organiclever && docker compose up",
    "organiclever:dev:restart": "cd infra/dev/organiclever && docker compose down && docker compose up",
    "organiclever:clean": "sudo chown -R $USER:$USER apps/organiclever-be/target && rm -rf apps/organiclever-be/target",
    "sync:claude-to-opencode": "nx run rhino-cli:build --skip-nx-cache && ./apps/rhino-cli/dist/rhino-cli sync-agents",
    "sync:agents": "nx run rhino-cli:build --skip-nx-cache && ./apps/rhino-cli/dist/rhino-cli sync-agents --agents-only",
    "sync:skills": "nx run rhino-cli:build --skip-nx-cache && ./apps/rhino-cli/dist/rhino-cli sync-agents --skills-only",
    "sync:dry-run": "nx run rhino-cli:build --skip-nx-cache && ./apps/rhino-cli/dist/rhino-cli sync-agents --dry-run",
    "validate:sync": "nx run rhino-cli:build --skip-nx-cache && ./apps/rhino-cli/dist/rhino-cli validate-sync",
    "validate:claude": "nx run rhino-cli:build --skip-nx-cache && ./apps/rhino-cli/dist/rhino-cli validate-claude",
    "validate:opencode": "npm run validate:sync",
    "validate:config": "npm run validate:claude && npm run sync:claude-to-opencode && npm run validate:opencode",
    "doctor": "nx run rhino-cli:build --skip-nx-cache && ./apps/rhino-cli/dist/rhino-cli doctor"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "volta": {
    "node": "24.11.1",
    "npm": "11.6.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "markdownlint-cli2": "^0.20.0",
    "nx": "22.5.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": "prettier --write",
    "*.json": "prettier --write",
    "*.go": "gofmt -w",
    "apps/ayokoding-web/archetypes/**/*.md": "echo 'Skipping Hugo archetype'",
    "*.md": "prettier --write",
    "*.{yml,yaml}": "prettier --write",
    "*.{css,scss}": "prettier --write"
  },
  "overrides": {
    "markdown-it": "14.1.1",
    "minimatch": ">=10.2.1"
  }
}
