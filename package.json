{
  "name": "open-sharia-enterprise",
  "version": "1.0.0",
  "description": "Fintech application with monorepo architecture",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "lint": "nx run-many -t lint",
    "lint:md": "markdownlint-cli2 \"**/*.md\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\"",
    "format:md": "prettier --write \"**/*.md\"",
    "format:md:check": "prettier --check \"**/*.md\"",
    "affected:build": "nx affected -t build",
    "affected:test": "nx affected -t test",
    "affected:lint": "nx affected -t lint",
    "graph": "nx graph",
    "nx": "nx",
    "prepare": "husky",
    "sync:claude-to-opencode": "bash scripts/sync-claude-to-opencode.sh",
    "sync:agents": "bash scripts/sync-claude-to-opencode.sh --agents-only",
    "sync:skills": "bash scripts/sync-claude-to-opencode.sh --skills-only",
    "sync:dry-run": "bash scripts/sync-claude-to-opencode.sh --dry-run",
    "validate:sync": "bash scripts/validate-sync.sh"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "volta": {
    "node": "24.11.1",
    "npm": "11.6.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "markdownlint-cli2": "^0.20.0",
    "nx": "^22.1.3",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": "prettier --write",
    "*.json": "prettier --write",
    "apps/ayokoding-web/archetypes/**/*.md": "echo 'Skipping Hugo archetype'",
    "*.md": "prettier --write",
    "*.{yml,yaml}": "prettier --write",
    "*.{css,scss}": "prettier --write"
  }
}
